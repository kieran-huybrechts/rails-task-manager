<h2><%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<p>Completed? <%= @task.completed %></p>

<%= link_to "Delete?",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Update?", edit_task_path(@task)%>

<%= link_to "Create a task", tasks_new_path%>
